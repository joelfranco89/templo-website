<% include header.ejs %>



<div class="container text-center border" style="margin-top: 80px;">
  <div class="row" style="margin: 5%;">
    <blockquote class="blockquote text-center">
      <h1 class="mb-0" style="text-align: left;"><%= question.question %></h1>
      <footer class="blockquote-footer">Non medial questions will be removed</footer>
    </blockquote>
  </div>
  
    <div class="row">
      <%if (!currentUser){%>      
      <div class="float-left"  data-toggle="tooltip" title="You need to be signed in">  
          <button type="submit" class="btn btn-danger btn-sm" style="pointer-events: none;" disabled>
            Helpful &nbsp;<i class="far fa-thumbs-up"></i>&nbsp;<%= question.helpful %>
          </button>        
      </div>
      <div class="float-left"  data-toggle="tooltip" title="You need to be signed in">     
          <button type="submit" class="btn btn-danger btn-sm" style="pointer-events: none;" disabled>
            Not Helpful &nbsp;<i class="far fa-thumbs-down"></i>&nbsp;<%= question.notHelpful %>
          </button>      
      </div>
      <%}else{%>
      <form action="/helpful/<%= question._id %>" method="POST">
        <div>
          <button type="submit" class="btn btn-danger btn-sm float-left" type="button">
            Helpful &nbsp;<i class="far fa-thumbs-up"></i>&nbsp;<%= question.helpful %>
          </button>
        </div>
      </form>
      <form action="/nothelpful/<%= question._id %>" method="POST">
        <div>
          <button type="submit" class="btn btn-danger btn-sm float-left" type="button">
            Not Helpful &nbsp;<i class="far fa-thumbs-down"></i>&nbsp;<%= question.notHelpful %>
          </button>
        </div>
       </form>
      <%}%>
      
      
      <% if (question.authorId === "Guest"){ %>
        <button type="button" class="btn btn-dark btn-sm float-right">
        Posted by: Guest
        </button>   
      <% }else{ %>
        <a href="/profile/<%=question.authorId%>"><button type="button" class="btn btn-dark btn-sm float-right">
        Posted by: <%= question.authorUsername %>
          </button></a>       
      <% } %>

      
    <!-- Button trigger modal -->
    <% if (question.answers.length == 0) { %>
      <button type="button" class="btn btn-primary btn-sm float-right" data-toggle="modal" data-target="#exampleModal">
        Be the first to answer this question
      </button>  
    <% }else{ %>
      <button type="button" class="btn btn-primary btn-sm float-right" data-toggle="modal" data-target="#exampleModal">
        Answer
      </button>  
    <% } %>
 
      
   
    <!-- Answer form -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel"><%= question.question %></h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/question/<%= question._id %>/answer" method="POST">
          <div class="modal-body">
            <textarea class="form-control" name="answer"></textarea>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>
          </div>
          </form>
        </div>
      </div>
    </div>
    
      <!-- Delete Button -->
      <%if (typeof currentUser !== "undefined" && currentUser._id == question.authorId){ %>
        <form action="/deletequestion/<%=question._id%>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-info btn-sm float-right">
          Delete
          </button>   
        </form>
      <%}%>

      <!--Admin delete button-->
            <!-- Delete Button -->
            <%if ( currentUser && currentUser.isAdmin){ %>
              <form action="/admindeletequestion/<%=question._id%>?_method=DELETE" method="POST">
                <button type="submit" class="btn btn-info btn-sm float-right">
                Delete
                </button>   
              </form>
            <%}%>

      <!-- Follow Question Button -->  
      <% var isFollowing = false %>
      <% question.userEmailsArray.forEach(function(email){ %>
        <%if (currentUser && currentUser.email == email){ %>
          <% isFollowing = true %>
        <% } %>
      <% });%>


      <% if ( currentUser && isFollowing){ %>
        <form action="/unfollowquestion/<%=question._id%>" method="POST">
          <button class="btn btn-sm btn-secondary">Unfollow Question</button>
        </form>
      <% } %>


      <% if ( currentUser && !isFollowing){ %>
        <form action="/followquestion/<%=question._id%>" method="POST">
          <button class="btn btn-sm btn-secondary">Follow Question</button>
        </form>
      <% } %>
      


      <%if (!currentUser){ %>
        <div class="float-left"  data-toggle="tooltip" title="You need to be signed in">  
            <button class="btn btn-secondary btn-sm" style="pointer-events: none;" disabled>
              Follow Question
            </button>        
        </div>
      <% } %>



      

      
      
   </div>
</div>



<!--Array of answers-->

<div class="container" style="margin-top: 5%;">
    <div class="row">

      <!--Message Display-->
        <%if (message && message.length > 0){%>
          <div class="alert alert-info">
            <%=message%>
          </div>
        <%}%>   

      <div class="col-md-9">
        <ul class="list-group">
          <% question.answers.forEach(function(answer){ %>
            <li class="list-group-item">
              <p><%= answer.answer %></p>
              <% if (typeof currentUser !== "undefined" && currentUser._id == answer.authorId){ %>  
                <form action="/deleteanswer/<%=answer._id%>/question/<%=answer.questionId%>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-sm btn-outline-danger float-right">Delete</button>
                </form>
              <% } %>
              <% if (currentUser && currentUser.isAdmin){ %>  
                <form action="/admindeleteanswer/<%=answer._id%>/question/<%=answer.questionId%>?_method=DELETE" method="POST">
                  <button type="submit" class="btn btn-sm btn-outline-danger float-right">Delete</button>
                </form>
              <% } %>
            </li>
          <% }); %>
        </ul>
      </div>
     
      
      
      <div class="col-md-3">
        Something will go here.
      </div>
      
    </div>
</div>




 




<script>
$( document ).ready(function() {
  
    $('[data-toggle="tooltip"]').tooltip();
});
</script>


<% include footer.ejs %>