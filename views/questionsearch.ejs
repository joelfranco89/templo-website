<!-- Creating array from search-->
<% var searchSplitArray = search.split(' ') %>
<% var duplicateSearchArray = [] %>
<% var searchArray = [] %>

<% for (i = 0; i < questions.length; i++){ %>
  <% searchSplitArray.forEach(function(word){ %>
    <% if (questions[i].question.toLowerCase().includes(word.toLowerCase())){ %>
      <% duplicateSearchArray.unshift(questions[i]); %>  
    <% }; %>    
  <% }); %>
<% }; %>

<!-- Removing duplicate search results -->
<% for (i = 0; i < duplicateSearchArray.length; i++){ %>
      <% if (searchArray.indexOf(duplicateSearchArray[i]) == -1){ %>
           <% searchArray.unshift(duplicateSearchArray[i]) %>
      <% } %>
<% } %>


